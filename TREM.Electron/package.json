{
  "name": "tremv",
  "version": "6.1.64",
  "description": "Taiwan Real-time Earthquake Monitoring Variety ( 臺灣即時地震監測變體 )",
  "main": "main.js",
  "homepage": "https://exptech.com.tw/",
  "author": "ExpTechTW <ExpTech.tw@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --key",
    "dist": "electron-builder -p always",
    "lint": "eslint --ext .js js/"
  },
  "build": {
    "productName": "TREMV",
    "appId": "tw.exptech.tremv",
    "asar": true,
    "asarUnpack": [
      "./audio",
      "./station.json",
      "./package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "msi"
      ],
      "icon": "TREM.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ],
      "category": "Development",
      "maintainer": "ExpTechTW"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dev"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yayacat/TREM.git"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "@material/material-color-utilities": "^0.2.0",
    "@turf/circle": "^6.5.0",
    "axios": "^1.6.2",
    "bytenode": "^1.5.3",
    "chokidar": "^3.5.3",
    "discord.js": "14.14.1",
    "echarts": "^5.4.3",
    "electron-common-ipc": "^16.0.4",
    "electron-fcm-push-receiver": "^2.1.7",
    "electron-log": "5.0.1",
    "electron-updater": "^6.1.7",
    "expose-gc": "^1.0.0",
    "jquery": "3.7.1",
    "leaflet": "^1.9.4",
    "leaflet-edgebuffer": "^1.0.6",
    "leaflet-geojson-vt": "^1.1.0",
    "protobufjs": "^7.2.5",
    "speak-tts": "^2.0.8",
    "tinycolor2": "1.6.0",
    "tough-cookie": "^4.1.3",
    "ws": "^8.14.2"
  }
}
